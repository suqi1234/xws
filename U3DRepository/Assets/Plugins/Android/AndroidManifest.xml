            android:name="unity.splash-enable"
            android:value="True" />
        <meta-data
            android:name="android.max_aspect"
            android:value="2.1" />
        <meta-data
            android:name="unity.builder"
            android:value="\5832775" />

        <activity android:name="com.onevcat.uniwebview.UniWebViewFileChooserActivity" />
